<%
# MySQL my.cnf tuning
MEMCAP = payload[:member][:schema][:meta][:ram].to_i / 1024 / 1024

# innodb_buffer_pool_size
INNODB_BUFFER_POOL_SIZE = case MEMCAP
  when 0..132 then "32M"
  when 133..264 then "#{MEMCAP / 2}M"
  else
    "#{(MEMCAP * 0.5).to_i}M"
end

KEY_BUFFER_SIZE = case MEMCAP
  when 0..132 then type == 'mariadb' ? '8M' : '16M'
  when 133..264 then '16M'
  when 265..4096 then '32M'
  else
    '64M'
end

# back_log
BACK_LOG = MEMCAP > 8000 ? 128 : 64

# max_connections
MAX_CONNECTIONS = case MEMCAP
  when 0..1000 then 200
  when 1001..2000 then 500
  when 2001..3000 then 1000
  when 3001..5000 then 2000
  else
    3000
  end

# table_cache
TABLE_CACHE = case (MEMCAP / 4)
  when 0..256 then 256
  else
    512
  end

# thread_cache_size
THREAD_CACHE_SIZE = case (MAX_CONNECTIONS / 2)
  when 0..1000 then 100
  else 
    1000
  end
-%>
#
# PagodaBox MySQL configuration
#
 
# The following options will be passed to all MySQL clients
[client]
port                  = 3306
socket                = /tmp/mysqld.sock
default-character-set = utf8
 
# The MySQL server
[mysqld]
user                    = gonano
port                    = 3306
basedir                 = /data
datadir                 = /datas
socket                  = /tmp/mysqld.sock
bind-address            = 0.0.0.0
default-storage-engine  = innodb
character-set-server    = utf8
skip-external-locking
log_warnings
skip_name_resolve
#default-time-zone='UTC'
<% if version == '5.6' -%>
explicit_defaults_for_timestamp
<% end -%>
<% if boxfile[:mysql_event_scheduler] && ( ['true', 'On', 'on', '1'].include? boxfile[:mysql_event_scheduler].to_s ) -%>
event_scheduler=on
<% end -%>

# MyISAM settings
key_buffer_size         = <%= boxfile[:mysql_myisam_key_buffer_size] || KEY_BUFFER_SIZE%>
sort_buffer_size        = <%= boxfile[:mysql_myisam_sort_buffer_size] %>
read_buffer_size        = <%= boxfile[:mysql_myisam_read_buffer_size] %>
read_rnd_buffer_size    = <%= boxfile[:mysql_myisam_read_rnd_buffer_size] %>
myisam_sort_buffer_size = <%= boxfile[:mysql_myisam_myisam_sort_buffer_size] %>
myisam-recover-options  = <%= boxfile[:mysql_myisam_recover] %>

# InnoDB settings
innodb_data_home_dir            = /datas
innodb_log_group_home_dir       = /datas
innodb_data_file_path           = ibdata1:100M:autoextend
innodb_buffer_pool_size         = <%= boxfile[:mysql_innodb_buffer_pool_size] || INNODB_BUFFER_POOL_SIZE %>
innodb_log_file_size            = 400M
innodb_additional_mem_pool_size = <%= boxfile[:mysql_innodb_additional_mem_pool_size] %>
innodb_log_buffer_size          = <%= boxfile[:mysql_innodb_log_buffer_size] %>
innodb_flush_log_at_trx_commit  = <%= boxfile[:mysql_innodb_flush_log_at_trx_commit] %>
innodb_lock_wait_timeout        = <%= boxfile[:mysql_innodb_lock_wait_timeout] %>
innodb_doublewrite              = <%= boxfile[:mysql_innodb_doublewrite] %>
innodb_io_capacity              = <%= boxfile[:mysql_innodb_io_capacity] %>
innodb_read_io_threads          = <%= boxfile[:mysql_innodb_read_io_threads] %>
innodb_write_io_threads         = <%= boxfile[:mysql_innodb_write_io_threads] %>
innodb_autoinc_lock_mode        = 2
innodb_file_per_table

<% if type == 'mariadb' -%>
# Aria 
aria_pagecache_buffer_size      = 8M
aria_sort_buffer_size           = 32M
<% end -%>

<% if boxfile[:mysql_slow_query_log] -%>
# Slow query log settings
# The default logs all full table scans,tmp tables,filesorts on disk queries
slow_query_log_file = /var/log/mysql/slowquery.log
slow_query_log      = 1
<% end -%>
 
# Other general MySQL settings
performance-schema        = <%= boxfile[:mysql_performance_schema] %>
table_open_cache          = <%= boxfile[:mysql_table_open_cache] || TABLE_CACHE %>
thread_cache_size         = <%= boxfile[:mysql_thread_cache_size] || THREAD_CACHE_SIZE %>
query_cache_type          = 0
query_cache_size          = 0
back_log                  = <%= boxfile[:mysql_back_log] || BACK_LOG %>
thread_concurrency        = <%= boxfile[:mysql_thread_concurrency] || (`mpstat | tail -n +2 | wc -l`.to_i * 2 + 2) %> 
tmpdir                    = /var/tmp
max_connections           = <%= boxfile[:mysql_max_connections] || MAX_CONNECTIONS %>
max_allowed_packet        = <%= boxfile[:mysql_max_allowed_packet] %>
max_join_size             = <%= boxfile[:mysql_max_join_size] %>
net_buffer_length         = <%= boxfile[:mysql_net_buffer_length] %>
thread_stack              = <%= boxfile[:mysql_thread_stack] %>
tmp_table_size            = <%= boxfile[:mysql_tmp_table_size] %>
max_heap_table_size       = <%= boxfile[:mysql_max_heap_table_size] %>
group_concat_max_len      = <%= boxfile[:mysql_group_concat_max_len] %>

<% if boxfile[:mysql_allow_suspicious_udfs] and ['On', 'on', '1'].include? boxfile[:mysql_allow_suspicious_udfs] -%>
allow_suspicious_udfs
<% end -%>
<% if boxfile[:mysql_ansi] -%>
ansi
<% end -%>

# Full Text Settings
<% if boxfile[:mysql_ft_max_word_len] and boxfile[:mysql_ft_max_word_len] >= 10 -%>
ft_max_word_len = <%= boxfile[:mysql_ft_max_word_len] %>
<% end -%>
<% if boxfile[:mysql_ft_min_word_len] and boxfile[:mysql_ft_min_word_len] >= 1 -%>
ft_min_word_len = <%= boxfile[:mysql_ft_min_word_len] %>
<% end -%>
<% if boxfile[:mysql_ft_query_expansion_limit] and boxfile[:mysql_ft_query_expansion_limit] >= 0 and boxfile[:mysql_ft_query_expansion_limit] <= 1000 -%>
ft_query_expansion_limit = <%= boxfile[:mysql_ft_query_expansion_limit] %>
<% end -%>
<% if boxfile[:mysql_ft_stopword_file] -%>
ft_stopword_file = <%= boxfile[:mysql_ft_stopword_file] %>
<% end -%>

# Plugin Configuration
plugin_dir=/data/lib/mysql/plugin
# we do not allow myisam tables with galera cluster
plugin-load=DISABLE_MYISAM=dm.so
<% plugins.each do |plugin| -%>
plugin-load=<%= plugin[:name] %>=<%= plugin[:soname] %>
<% end -%>

# Plugin-Specific Configuration
<% if boxfile[:mysql_audit_log] and boxfile[:mysql_plugins].include? 'audit_log' -%>
mysql_audit_log = <%= boxfile[:mysql_audit_log] %>
<% end -%>
 
# Replication settings (master to slave)
# This is not enabled by default.  There are more steps
# to this besides uncommenting the lines below.
# See: http://wiki.joyent.com/wiki/display/jpc2/Replication
#
binlog_format     = ROW
log-bin           = /datas/bin.log
max_binlog_size   = 100M
log-error         = /var/log/mysql/error.log
expire_logs_days  = 7
 
# Galera wsrep configuration
wsrep_provider=/data/lib/mysql/plugin/libgalera_smm.so
wsrep_cluster_name="<%= payload[:service][:id].delete('-') %>"
wsrep_cluster_address="gcomm://<%= (payload[:generation][:members].map {|m| m[:local_ip] }).join(',') %>"
wsrep_sst_method=rsync
wsrep_node_address="<%= payload[:member][:local_ip] %>"
wsrep_node_name="<%= `hostname`.to_s.strip[-59..-1] %>"
# wsrep_debug=ON

[mysqldump]
quick
max_allowed_packet = 16M
 
[mysql]
no-auto-rehash
# Remove the next comment character if you are not familiar with SQL
#safe-updates
 
[myisamchk]
key_buffer_size   = 128M
sort_buffer_size  = 128M
read_buffer       = 2M
write_buffer      = 2M
 
[mysqlhotcopy]
interactive-timeout
